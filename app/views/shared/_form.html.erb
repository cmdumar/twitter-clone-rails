<p class="text-muted mb-1">WRITE SOMETHING</p>
<%= simple_form_for(opinion) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :content, label: false, placeholder: "Compose new opinion" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-sm primary-bg rounded-pill px-3 text-white font-weight-bold mt-2' %>
  </div>
<% end %>

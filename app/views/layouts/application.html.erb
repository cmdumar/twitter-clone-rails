<!DOCTYPE html>
<html>
  <head>
    <title>RailsCapstone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">

    <%= sidebar %>

    <nav class="navbar navbar-expand-lg navbar-dark primary-bg py-4 ml-15 <%= margin_left_zero %>">
        <%= link_to fa_icon "twitter", id: "logo-font", class: "navbar-brand pl-3" %>
      <div class="collapse navbar-collapse justify-content-end align-items-center pr-2" id="navbarNav">
        <ul class="navbar-nav">
          <%= nav_btn %>
        </ul>
      </div>
    </nav>

    <div class="container-fluid pd-15 <%= padding_left_zero %>">
      <%= yield %>
    </div>
  </body>
</html>
